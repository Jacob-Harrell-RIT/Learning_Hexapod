#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_LSM303.h>


volatile int rdy=0;
const int analogInPin = A0;  // Analog input pin that the 1st potentiometer is attached to
volatile int sensorValue = 0;        // value read from the pot
int n=0;
Adafruit_LSM303 lsm;

void setup(void)
{
  Serial.begin(115200);
  pinMode(2,INPUT);
  pinMode(13,OUTPUT);
  digitalWrite(13,0);
    if(!lsm.begin())
  {
    /* There was a problem detecting the ADXL345 ... check your connections */
    Serial.println("no LSM303 detected");
    while(1){
      digitalWrite(13,1);
      delay(100);
      digitalWrite(13,0);
      delay(100);
    }
  }
  attachInterrupt(0,LSM_RDY,FALLING);
  //past=millis();
  //now=millis();
}
//(15 hz-->66.6666 ms)
void loop(void)
{
  if(rdy==1){
    //now=micros();
    lsm.read();
    for(n=0;n<=3;n++){
      sensorValue = analogRead(analogInPin+n);
      Serial.print(sensorValue);   
      Serial.print(",");
     }
     Serial.println();
     rdy=0;
     digitalWrite(13,0);
  }
}

void LSM_RDY(void){
  rdy=1;
  digitalWrite(13,1);
 }
